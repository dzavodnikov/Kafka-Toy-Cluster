<!--
    Configuration of reload4j. See:
        https://logback.qos.ch/manual/
    Provide path to that file as "-Dlogback.configurationFile=/path/to/logback.xml".
-->
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss, UTC} %highlight(%-5level) %logger{36} %mdc: %msg%n</pattern>
        </encoder>
    </appender>

    <!--
        Available log levels are:
        TRACE, DEBUG, INFO, WARN, ERROR, OFF
    -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="org.apache.kafka.clients.consumer.internals" level="WARN" />
    <logger name="org.apache.kafka.common.metrics" level="WARN" />
</configuration>
